<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Set your desired corner radius -->
            <gradient
                android:startColor="#FF4081"
                android:centerColor="#FF4081"
                android:endColor="#3F51B5"
                android:angle="45" />
        </shape>
    </item>

    <!-- Shadow -->
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Set your desired corner radius -->
            <solid android:color="#33000000" /> <!-- Shadow color with alpha -->
        </shape>
    </item>
</layer-list>
